@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p role="status">File count: @fileCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="ReadFileCount">Read file count</button>

@code {
    private int currentCount = 0;

    private string fileCount = "";

    private void IncrementCount()
    {
        currentCount++;
        File.AppendAllText("Files\\Counter.txt", currentCount.ToString() + Environment.NewLine);
    }

    private void ReadFileCount()
    {
        fileCount = File.ReadAllLines("Files\\Counter.txt").Last();
    }
}
